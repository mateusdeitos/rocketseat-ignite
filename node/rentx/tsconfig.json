{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"baseUrl": "./src",
		"rootDir": ".",
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"],
			"@utils/*": ["utils/*"],
			"@errors/*": ["errors/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}